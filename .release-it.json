{
  "hooks": {
    "before:bump": "git-chglog --next-tag ${version} > CHANGELOG.md"
  },
  "git": {
    "commitMessage": "chore: bump version to ${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}",
    "push": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  }
}
